    <script>
        // Prayer time offsets (minutes before Jamaat)
        const prayerOffsets = {
            'fajr': 44,
            'zuhr': 15,
            'asr': 15,
            'maghrib': 6,
            'isha': 15
        };
        
        // Base Jamaat times (initial times)
        const baseJamaatTimes = {
            'fajr': '6:15 AM',
            'zuhr': '1:00 PM',
            'asr': '4:15 PM',
            'maghrib': '5:48 PM',
            'isha': '7:15 PM'
        };
        
        // Function to convert time string to minutes since midnight
        function timeToMinutes(timeStr) {
            const [time, modifier] = timeStr.split(' ');
            let [hours, minutes] = time.split(':').map(Number);
            
            if (modifier === 'PM' && hours !== 12) {
                hours += 12;
            }
            if (modifier === 'AM' && hours === 12) {
                hours = 0;
            }
            
            return hours * 60 + minutes;
        }
        
        // Function to convert minutes to time string
        function minutesToTime(minutes) {
            let hours = Math.floor(minutes / 60);
            const mins = minutes % 60;
            const modifier = hours >= 12 ? 'PM' : 'AM';
            
            if (hours > 12) {
                hours -= 12;
            } else if (hours === 0) {
                hours = 12;
            }
            
            return `${hours}:${mins.toString().padStart(2, '0')} ${modifier}`;
        }
        
        // Function to calculate Azaan time based on Jamaat time and offset
        function calculateAzaanTime(jamaatTime, offsetMinutes) {
            const jamaatMinutes = timeToMinutes(jamaatTime);
            const azaanMinutes = jamaatMinutes - offsetMinutes;
            
            // Handle case where azaan time crosses midnight
            if (azaanMinutes < 0) {
                return minutesToTime(azaanMinutes + 24 * 60);
            }
            
            return minutesToTime(azaanMinutes);
        }
        
        // Function to get dynamic Fajr time based on days passed
        function getDynamicFajrTime() {
            // Set the initial date when the time was 6:15 AM
            const initialDate = new Date('2025-11-05');
            const today = new Date();
            
            // Calculate days difference
            const timeDiff = today.getTime() - initialDate.getTime();
            const daysDiff = Math.floor(timeDiff / (1000 * 3600 * 24));
            
            // Calculate new Fajr time (increase by 5 minutes every 5 days)
            const baseFajrMinutes = timeToMinutes(baseJamaatTimes.fajr);
            const fiveDayIncrements = Math.floor(daysDiff / 5);
            const newFajrMinutes = baseFajrMinutes + (fiveDayIncrements * 5);
            
            // Handle case where time goes above 24 hours
            if (newFajrMinutes >= 24 * 60) {
                return minutesToTime(newFajrMinutes - 24 * 60);
            }
            
            return minutesToTime(newFajrMinutes);
        }
        
        // Function to get dynamic Maghrib time based on days passed
        function getDynamicMaghribTime() {
            // Set the initial date when the time was 5:45 PM
            const initialDate = new Date('2025-11-05');
            const today = new Date();
            
            // Calculate days difference
            const timeDiff = today.getTime() - initialDate.getTime();
            const daysDiff = Math.floor(timeDiff / (1000 * 3600 * 24));
            
            // Calculate new Maghrib time (decrease by 1 minute per day)
            const baseMaghribMinutes = timeToMinutes(baseJamaatTimes.maghrib);
            const newMaghribMinutes = baseMaghribMinutes - daysDiff;
            
            // Handle case where time goes below 0
            if (newMaghribMinutes < 0) {
                return minutesToTime(newMaghribMinutes + 24 * 60);
            }
            
            return minutesToTime(newMaghribMinutes);
        }
        
        // Function to update all Azaan times
        function updateAzaanTimes() {
            const jamaatTimes = {...baseJamaatTimes};
            jamaatTimes.fajr = getDynamicFajrTime();
            jamaatTimes.maghrib = getDynamicMaghribTime();
            
            for (const prayer in jamaatTimes) {
                const jamaatTime = jamaatTimes[prayer];
                const offset = prayerOffsets[prayer];
                const azaanTime = calculateAzaanTime(jamaatTime, offset);
                
                document.getElementById(`${prayer}-azaan`).textContent = azaanTime;
                document.getElementById(`${prayer}-jamaat`).textContent = jamaatTime;
            }
            
            return jamaatTimes;
        }
        
        // Function to update current date and time
        function updateDateTime() {
            const now = new Date();
            
            // Update current date
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            document.getElementById('current-date').textContent = now.toLocaleDateString('en-US', options);
            
            // Update current time
            const timeOptions = { hour: 'numeric', minute: 'numeric', second: 'numeric' };
            document.getElementById('current-time').textContent = now.toLocaleTimeString('en-US', timeOptions);
            
            // Update current year in footer
            document.getElementById('current-year').textContent = now.getFullYear();
            
            return now;
        }
        
        // Function to calculate next prayer
        function updateNextPrayer(now, jamaatTimes) {
            const currentTime = now.toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit' });
            const currentMinutes = timeToMinutes(currentTime);
            
            let nextPrayer = null;
            let minDiff = 24 * 60; // Initialize with max value (24 hours in minutes)
            
            for (const prayer in jamaatTimes) {
                const prayerTime = jamaatTimes[prayer];
                const prayerMinutes = timeToMinutes(prayerTime);
                
                let diff = prayerMinutes - currentMinutes;
                if (diff < 0) {
                    diff += 24 * 60; // Add 24 hours if prayer time has passed for today
                }
                
                if (diff < minDiff) {
                    minDiff = diff;
                    nextPrayer = prayer;
                }
            }
            
 3           if (nextPrayer) {
                const formattedPrayerName = nextPrayer.charAt(0).toUpperCase() + nextPrayer.slice(1);
                const nextPrayerTime = jamaatTimes[nextPrayer];
                
                // Calculate time remaining
                const hoursRemaining = Math.floor(minDiff / 60);
                const minutesRemaining = minDiff % 60;
                
                let timeRemainingText = "";
                if (hoursRemaining > 0) {
                    timeRemainingText = `${hoursRemaining}h ${minutesRemaining}m`;
                } else {
                    timeRemainingText = `${minutesRemaining}m`;
                }
                
                document.getElementById('next-prayer').innerHTML = 
                    `${formattedPrayerName} at ${nextPrayerTime} <br><span style="font-size: 1.2rem; color: #7cfc00;">(${timeRemainingText} remaining)</span>`;
            }
        }
        
        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            // Update prayer times
            const jamaatTimes = updateAzaanTimes();
            
            // Update date and time
            const now = updateDateTime();
            
            // Update next prayer
            updateNextPrayer(now, jamaatTimes);
            
            // Update current time every second
            setInterval(function() {
                const now = updateDateTime();
                updateNextPrayer(now, jamaatTimes);
            }, 1000);
        });
    </script>
</body>
